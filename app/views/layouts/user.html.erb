<!DOCTYPE html>
<html>
   <head>
      <title><%= full_title(yield(:title)) %></title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
      <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
      <%= render "layouts/shim" %>
   </head>
   <body>
      <%= render "layouts/navigation" %>
      <div class="container px-4 px-lg-5 mt-6">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
        <div class="container bootstrap snippets bootdey">
          <div class="row height-full">
            <div class="profile-nav col-md-3">
              <div class="panel">
                <div class="user-heading round border-r-5 mb-2">
                  <%= link_to(image_tag(check_image?(@user.avatar, "user_img.jpg")), "#") %>
                  <h1><%= @user.name %></h1>
                  <p><%= @user.email %></p>
                </div>
                <ul class="nav nav-pills nav-stacked">
                  <li class="li-custom">
                    <%= link_to user_path do %>
                      <i class="fa fa-user"></i><%= t(".profile") %>
                    <% end %>
                  </li>
                  <li class="li-custom">
                    <%= link_to requests_path do %>
                      <i class="fa fa-calendar"></i><%= t(".requests_history") %>
                    <% end %>
                  </li>
                  <li class="li-custom">
                    <%= link_to user_path do %>
                      <i class="fa fa-edit"></i><%= t(".edit_profile") %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
            <div class="profile-info col-md-9">
              <div class="panel">
                <div class="bio-graph-heading border-r-5">
                  <%= t ".bio_text" %>
                </div>
                <%= yield %>
              </div>
            </div>
          </div>
        </div>
        <%= render "layouts/footer" %>
      </div>
   </body>
</html>
