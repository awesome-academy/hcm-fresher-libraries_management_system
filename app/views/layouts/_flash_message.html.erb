<div id="message">
  <% if notice %>
    <div  id="inner-message-success" class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% elsif alert %>
    <div  id="inner-message-danger" class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
  <% else %>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
  <% end %>
</div>
