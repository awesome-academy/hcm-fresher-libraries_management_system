<div class="row mt-auto mb-5 gx-4 gx-lg-5 align-items-center">
  <div class="col-md-6">
    <%= image_tag check_img?(@book, "https://dummyimage.com/600x700/dee2e6/6c757d.jpg"), class: "card-img-top mb-5 mb-md-0", alt: "book image" %>
  </div>
  <div class="col-md-6">
    <div class="small mb-1 pd-t-1"><%= @book.category %></div>
    <h1 class="display-5 fw-bolder"><%= @book.name %></h1>
    <div class="fs-5 mb-5">
      <span><%= @book.author_name %></span>
    </div>
    <p class="lead"><%= @book.describe %></p>
    <div class="fs-5 mb-5">
      <span><%= @book.publisher %></span>
    </div>
    <div class="d-flex">
      <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
      <button class="btn btn-outline-dark flex-shrink-0" type="button">
        <i class="bi-cart-fill me-1"></i><%= t ".add_req" %>
      </button>
    </div>
  </div>
</div>
 <!-- Related items section-->
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4"><%= t ".same_author" %></h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <%= render same_au @books %>
    </div>
  </div>
</section>
