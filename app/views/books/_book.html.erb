<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <%= image_tag check_img?(book, "book_icon.png"), class: "card-img-top", alt: "book image" %>
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
          <!-- Product name-->
          <h5 class="fw-bolder"><%= book.name %></h5>
          <p class="card-text"><%= book.author_name %></p>
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Request</a></div>
    </div>
  </div>
</div>
