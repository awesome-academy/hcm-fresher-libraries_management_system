<div class="container bootstrap snippets bootdey">
  <div class="row height-full">
    <div class="profile-nav col-md-3">
      <div class="panel">
        <div class="user-heading round border-r-5 mb-2">
          <a href="#"><%= image_tag @user.avatar %></a>
          <h1><%= @user.name %></h1>
          <p><%= @user.email %></p>
        </div>
        <ul class="nav nav-pills nav-stacked">
          <li class="li-custom">
            <%= link_to admin_user_path do %>
              <i class="fa fa-user"></i><%= t(".profile") %>
            <% end %>
          </li>
          <li class="li-custom">
            <%= link_to admin_requests_path do %>
              <i class="fa fa-calendar"></i><%= t(".requests_history") %>
            <% end %>
          </li>
          <li class="li-custom">
            <%= link_to user_path do %>
              <i class="fa fa-edit"></i><%= t(".edit_profile") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <div class="profile-info col-md-9">
      <div class="panel">
        <div class="bio-graph-heading border-r-5">
          <%= t ".bio_text" %>
        </div>
        <div class="panel-body bio-graph-info mt-3 profile-border">
          <div class="profile-text-center">
            <h1><%= t ".info" %></h1>
            <div class="row">
              <div class="bio-row">
                <%= t(".name_html", name: @user.name)%>
              </div>
              <div class="bio-row">
                <%= t(".email_html", email: @user.email)%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
