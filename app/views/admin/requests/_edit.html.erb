<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title"><%= t ".edit_request" %></h4>
    </div>
    <div class="form-group">
      <%= form_for @request, url: admin_request_path, remote: true do |f| %>
        <div class="modal-body">
          <%= f.label :status, class: "form-label" %>
          <%= f.select :status, Request.statuses.keys, class: "form-control" %>
          <div class="row">
            <%= f.label :note, class: "form-label" %>
            <%= f.text_field :note, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= link_to t(".cancel"), :back, {class:"btn btn-dark", "data-dismiss": "modal"} %>
          <%= f.submit t(".save"), class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
